{
    "name": "catch-exit",
    "version": "2.0.0",
    "description": "Catch Node.js exit conditions, including errors and unhandled rejections.",
    "keywords": [
        "catch",
        "exit",
        "process",
        "kill",
        "error",
        "death",
        "cleanup",
        "clean up",
        "callback",
        "nodejs",
